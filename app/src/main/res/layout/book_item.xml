<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/book_padding"
    >

    <ImageView
        android:src="@drawable/ic_book"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:textSize="@dimen/book_font"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/book_font_small"
            android:drawableLeft="@drawable/ic_label"
            android:drawablePadding="@dimen/book_drawable_padding"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/book_font_small"
                android:drawableLeft="@drawable/ic_language"
                android:drawablePadding="@dimen/book_drawable_padding"
                />

            <TextView
                android:id="@+id/form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/book_font_small"
                android:drawableLeft="@drawable/ic_storage"
                android:drawablePadding="@dimen/book_drawable_padding"
                android:paddingLeft="@dimen/book_info_padding"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>